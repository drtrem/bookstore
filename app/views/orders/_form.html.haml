%h1.general-title-margin Checkout
%ul.steps.list-inline
  %li.step.active
    %span.step-number 1
    %span.step-text.hidden-xs Address
  %li.step-divider
  %li.step
    %span.step-number 2
    %span.step-text.hidden-xs Delivery
  %li.step-divider
  %li.step
    %span.step-number 3
    %span.step-text.hidden-xs Payment
  %li.step-divider
  %li.step
    %span.step-number 4
    %span.step-text.hidden-xs Confirm
  %li.step-divider
  %li.step
    %span.step-number 5
    %span.step-text.hidden-xs Complete
%form.res-mb-100
  .hidden-xs.hidden-sm
    .row
      .col-md-5
        %h3.general-subtitle Billing Address
        %p.general-info-text all fields are required
      .col-md-5.col-md-offset-1
        %h3.general-subtitle Shipping Address
  .row
    .col-md-5.mb-40
      .visible-xs.visible-sm
        %h3.general-subtitle Billing Address
        %p.general-info-text all fields are required
      = form_for(@order) do |f|
        .form-group
          = f.label :first_name, 'First Name', { class: 'control-label font-weight-lights', for: "first_name" }
          = f.text_field :first_name, { class: 'form-control', id: 'firstName', type: "text", placeholder: "First Name" }
        .form-group
          = f.label :last_name, 'Last Name', { class: 'control-label font-weight-lights', for: "last_name" }
          = f.text_field :last_name, { class: 'form-control', id: 'lastName', type: "text", placeholder: "Last Name" }
        .form-group
          = f.label :address, 'Address', { class: 'control-label font-weight-lights', for: "address" }
          = f.text_field :address, { class: 'form-control', id: 'address', type: "text", placeholder: "Address" }
        .form-group
          = f.label :city, 'City', { class: 'control-label font-weight-lights', for: "city" }
          = f.text_field :city, { class: 'form-control', id: 'city', type: "text", placeholder: "City" }
        .form-group
          = f.label :zip, 'Zip', { class: 'control-label font-weight-lights', for: "zip" }
          = f.text_field :zip, { class: 'form-control', id: 'zip', type: "text", placeholder: "Zip" }
        .form-group
          = f.label :country, 'Country', { class: 'control-label font-weight-lights', for: "country" }
          = f.text_field :country, { class: 'form-control', id: 'country', type: "text", placeholder: "Country" }
        .form-group
          = f.label :phone, 'Phone', { class: 'control-label font-weight-lights', for: "phone" }
          = f.text_field :phone, { class: 'form-control', id: 'phone', type: "tel", placeholder: "Example +355 66 123 4567" }
        = f.submit 'Save and Continue', {class: 'btn center-block mb-20', :disabled => !@order.nil?}
    .col-md-5.col-md-offset-1.mb-60
      .visible-xs.visible-sm
        %h3.general-subtitle Shipping Address
      = form_for(@order) do |f|
        .form-group
          = f.label :first_name, 'First Name', { class: 'control-label font-weight-lights', for: "first_name" }
          = f.text_field :first_name, { class: 'form-control', id: 'firstName', type: "text", placeholder: "First Name" }
        .form-group
          = f.label :last_name, 'Last Name', { class: 'control-label font-weight-lights', for: "last_name" }
          = f.text_field :last_name, { class: 'form-control', id: 'lastName', type: "text", placeholder: "Last Name" }
        .form-group
          = f.label :address, 'Address', { class: 'control-label font-weight-lights', for: "address" }
          = f.text_field :address, { class: 'form-control', id: 'address', type: "text", placeholder: "Address" }
        .form-group
          = f.label :city, 'City', { class: 'control-label font-weight-lights', for: "city" }
          = f.text_field :city, { class: 'form-control', id: 'city', type: "text", placeholder: "City" }
        .form-group
          = f.label :zip, 'Zip', { class: 'control-label font-weight-lights', for: "zip" }
          = f.text_field :zip, { class: 'form-control', id: 'zip', type: "text", placeholder: "Zip" }
        .form-group
          = f.label :country, 'Country', { class: 'control-label font-weight-lights', for: "country" }
          = f.text_field :country, { class: 'form-control', id: 'country', type: "text", placeholder: "Country" }
        .form-group
          = f.label :phone, 'Phone', { class: 'control-label font-weight-lights', for: "phone" }
          = f.text_field :phone, { class: 'form-control', id: 'phone', type: "tel", placeholder: "Example +355 66 123 4567" }
        .form-group.checkbox
          %label.font-weight-light.pl-0
            %input.checkbox-input{type: "checkbox", hidden: "true"}
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text Use Billing Adress
        .general-text-align.mb-60
          %p.in-gold-500.font-18 Order Summary
          %table.general-summary-table
            %tr
              %td
                %p.font-16 Item Total:
              %td
                %p.font-16= number_to_currency(@cart.total_price)
            %tr
              %td
                %p.font-16 Order Total:
              %td
                %p.font-16= number_to_currency(@cart.total_price)
          = f.submit 'Save and Continue', {class: 'btn center-block mb-20', :disabled => !@order.nil?}