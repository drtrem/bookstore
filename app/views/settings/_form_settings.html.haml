.row.mb-60
  .col-sm-5
    %p.in-gold-500.font-18.mb-25 Email
    .general-text-align
    = form_for( current_user, :url => settings_update_path, :method => :get, html: { :class => 'general-form-md'} ) do |f|
      .form-group.mb-35
        = f.label :email, 'Enter Email', { class: 'control-label font-weight-lights', for: "email" }
        = f.text_field :email, { class: 'form-control', id: 'email', type: "email", placeholder: "Enter your email" }
      .general-text-align
        = f.submit 'Save', {class: 'btn btn-default mb-35'}
  .col-sm-5.col-sm-offset-1
    %p.in-gold-500.font-18.mb-25 Password
    = form_for( current_user, :url => { :action => "update_password" }, html: { :class => 'general-form-md pb-25'} ) do |f|
      .form-group.mb-30
        = f.label :current_password, 'Old Password', { class: 'control-label font-weight-lights', for: "current_password" }
        = f.password_field :current_password, {name:"current_password", class: 'form-control', id: 'oldPassword', type: "password", placeholder: "Old Password" }
      .form-group.mb-30    
        = f.label :password, 'New Password', { class: 'control-label font-weight-lights', for: "password" }
        = f.password_field :password, {name:"password", class: 'form-control', id: 'password', type: "password", placeholder: "New Password", autoomplete: "off" }
      .form-group.mb-30
        = f.label :password_confirmation, 'Confirm Password', { class: 'control-label font-weight-lights', for: "password_confirmation" }
        = f.password_field :password_confirmation, {name:"password_confirmation", class: 'form-control', id: 'confirmPassword', type: "password", placeholder: "Confirm Password" }
      .general-text-align
        = f.submit 'Save', {class: 'btn btn-default mb-35'}
  .col-sm-12
    .divider-lg-bottom
    %p.in-gold-500.font-18.mb-25.pt-20 Remove Account
    %form
      .general-settings-btn
        = button_to 'Please Remove My Account', setting_path(:user), method: "delete", class: "btn mb-20"
      .form-group.checkbox.general-settings-checkbox
        %label.font-weight-light.pl-0
          %input.checkbox-input{type: "checkbox", hidden: "true"}
          %span.checkbox-icon
            %i.fa.fa-check
          %span.checkbox-text I understand that all data will be lost