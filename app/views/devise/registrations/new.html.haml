.text-center
  %h3.general-login-title Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "general-form" }) do |f|
  = devise_error_messages!
  .form-group.mb-30
    = f.label :email, 'Enter Email', { class: 'control-label font-weight-light', for: "email" }
    = f.email_field :email, { class: 'form-control', id: 'email', name:"email", type: "email", autofocus: true, placeholder: "Enter Email" }
  .form-group.mb-30
    = f.label :password, 'Password', { class: 'control-label font-weight-light', for: "password" }
    = f.email_field :password, { class: 'form-control', id: 'password', name:"password", type: "password", autocomplete: "off", placeholder: "Password" }
  .form-group.mb-30
    = f.label :password_confirmation, 'Password Confirmation', { class: 'control-label font-weight-light', for: "password_confirmation" }
    = f.email_field :password_confirmation, { class: 'form-control', id: 'password', name:"password", type: "password", autocomplete: "off", placeholder: "Password Confirmation" }
  .form-group.checkbox.text-center.mb-30
    = f.check_box :remember_me, { class: 'checkbox-input' }
    = f.label :remember_me, 'Remember me', { class: 'font-weight-light pl-0'}
  .text-center
    = f.submit "Sign up", {class: 'btn btn-default mb-20'}
