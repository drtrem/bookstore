.text-center
  %h3.general-login-title Log In
  %a.general-login-icon{href: "#{user_facebook_omniauth_authorize_path}"}
    %i.fa.fa-facebook-official
  %p.general-login-text or
= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "general-form" }) do |f|
  .form-group.mb-30
    = f.label :email, 'Enter Email', { class: 'control-label font-weight-light', for: "email" }
    = f.email_field :email, { class: 'form-control', id: 'email', name:"email", type: "email", autofocus: true, placeholder: "Enter Email" }
  .form-group.mb-30
    = f.label :password, 'Password', { class: 'control-label font-weight-light', for: "password" }
    = f.email_field :password, { class: 'form-control', id: 'password', name:"password", type: "password", autocomplete: "off", placeholder: "Password" }
    %a.help-block.in-gold-500{href: "#{new_password_path(resource_name)}"} Forgot password?
  .form-group.checkbox.text-center.mb-30
    = f.check_box :remember_me, { class: 'checkbox-input'}
    = f.label :remember_me, 'Remember me', { class: 'font-weight-light pl-0'}
  .text-center
    = f.submit "Log in", {class: 'btn btn-default mb-20'}
